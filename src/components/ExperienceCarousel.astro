---
// ExperienceCarousel.astro
// @ts-ignore
import { Swiper, SwiperWrapper, SwiperSlide, SwiperPagination } from "astro-swiper";

export interface Props {
  experiences: Array<{
    id: number;
    title: string;
    company: string;
    duration: string;
    achievements: string[];
    logo?: string;
  }>;
}

type Experience = Props['experiences'][0];

const { experiences } = Astro.props;
---

<div class="experience-carousel">
  <h2>Experience</h2>
  <Swiper
    options={{
      autoplay: {
        delay: 5000,
        disableOnInteraction: true,
      },
      loop: true,
      pagination: {
        el: ".swiper-pagination",
      },
    }}
  >
    <SwiperWrapper>
      {experiences.map((exp: Experience) => (
        <SwiperSlide>
          <div class="experience-item">
            <div class="experience-header">
              <div class="header-top">
                {exp.logo && (
                  <img src={exp.logo} alt={`${exp.company} logo`} class="company-logo" />
                )}
                <div class="header-text">
                  <h3 class="job-title">{exp.title}</h3>
                  <span class="company">{exp.company}</span>
                </div>
              </div>
              <span class="duration">{exp.duration}</span>
            </div>
            <ul class="achievements">
              {exp.achievements.map((achievement: string) => (
                <li>{achievement}</li>
              ))}
            </ul>
          </div>
        </SwiperSlide>
      ))}
    </SwiperWrapper>
    <SwiperPagination />
  </Swiper>
</div>

<style>
  .experience-carousel {
    max-width: 900px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: inherit;
  }

  /* Swiper container styling */
  .swiper {
    border-radius: 16px;
    background: var(--background-body);
    padding: 1rem;
    overflow: visible;
  }

  .swiper-slide {
    width: 100%;
    box-sizing: border-box;
    padding: 0 0.5rem;
  }

  .experience-item {
    padding: 2.5rem;
    text-align: left;
    background: linear-gradient(135deg, rgba(255,255,255,0.08), rgba(255,255,255,0.02));
    backdrop-filter: blur(20px);
    border-radius: 20px;
    border: 1px solid rgba(255,255,255,0.15);
    box-shadow: 0 8px 32px rgba(0,0,0,0.1), 0 2px 8px rgba(0,0,0,0.05);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .experience-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px 20px 0 0;
  }

  .experience-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0,0,0,0.15), 0 8px 24px rgba(0,0,0,0.08);
    border-color: rgba(255,255,255,0.25);
  }

  .experience-header {
    margin-bottom: 2rem;
    position: relative;
  }

  .header-top {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .company-logo {
    width: 56px;
    height: 56px;
    border-radius: 16px;
    object-fit: contain;
    background: linear-gradient(135deg, rgba(255,255,255,0.12), rgba(255,255,255,0.06));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 10px;
    box-sizing: border-box;
    flex-shrink: 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  }

  .experience-item:hover .company-logo {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    background: linear-gradient(135deg, rgba(255,255,255,0.18), rgba(255,255,255,0.08));
  }

  .header-text {
    flex: 1;
    min-width: 0;
  }

  .job-title {
    font-size: 1.625rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: inherit;
    line-height: 1.25;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, currentColor 0%, rgba(255,255,255,0.8) 100%);
    background-clip: text;
    -webkit-background-clip: text;
  }

  .company {
    display: block;
    font-size: 1.125rem;
    opacity: 0.85;
    margin: 0;
    line-height: 1.4;
    font-weight: 500;
    color: rgba(255,255,255,0.9);
  }

  .duration {
    display: inline-block;
    font-size: 0.95rem;
    opacity: 0.75;
    font-weight: 500;
    background: rgba(255,255,255,0.08);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 20px;
    padding: 0.5rem 1rem;
    letter-spacing: 0.02em;
  }

  .achievements {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
  }

  .achievements li {
    margin: 1rem 0;
    padding-left: 2rem;
    position: relative;
    line-height: 1.65;
    font-size: 1.05rem;
    opacity: 0.95;
    transition: all 0.3s ease;
  }

  .achievements li:hover {
    opacity: 1;
    transform: translateX(4px);
  }

  .achievements li:before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.7rem;
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    transition: all 0.3s ease;
  }

  .achievements li:hover:before {
    transform: scale(1.2);
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.3);
  }

  /* Swiper pagination styling */
  :global(.swiper-pagination) {
    position: relative !important;
    margin-top: 1.5rem !important;
  }

  :global(.swiper-pagination-bullet) {
    background: rgba(255,255,255,0.3) !important;
    width: 12px !important;
    height: 12px !important;
    transition: all 0.3s ease !important;
  }

  :global(.swiper-pagination-bullet-active) {
    background: rgba(255,255,255,0.8) !important;
    transform: scale(1.2) !important;
  }

  :global(.swiper-pagination-bullet:hover) {
    background: rgba(255,255,255,0.6) !important;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .experience-carousel {
      max-width: 100%;
    }

    .swiper {
      padding: 0.75rem;
    }

    .swiper-slide {
      padding: 0 0.25rem;
    }

    .experience-item {
      padding: 1.75rem;
    }
    
    .header-top {
      gap: 1rem;
    }
    
    .company-logo {
      width: 44px;
      height: 44px;
      padding: 8px;
    }
    
    .job-title {
      font-size: 1.375rem;
      line-height: 1.3;
    }

    .company {
      font-size: 1rem;
    }

    .duration {
      font-size: 0.95rem;
    }

    .achievements li {
      font-size: 1rem;
      margin: 0.625rem 0;
    }
  }

  @media (max-width: 640px) {
    .swiper {
      padding: 0.75rem 0.5rem;
    }

    .swiper-slide {
      padding: 0 0.5rem;
    }

    .experience-item {
      padding: 1.5rem;
    }
    
    .header-top {
      gap: 0.75rem;
    }
    
    .company-logo {
      width: 40px;
      height: 40px;
      padding: 6px;
    }
    
    .job-title {
      font-size: 1.25rem;
    }

    .company {
      font-size: 0.95rem;
    }

    .duration {
      font-size: 0.875rem;
    }

    .achievements li {
      font-size: 0.95rem;
      margin: 0.5rem 0;
      padding-left: 1.25rem;
    }
    
    :global(.swiper-pagination) {
      margin-top: 1.25rem !important;
    }

    :global(.swiper-pagination-bullet) {
      width: 10px !important;
      height: 10px !important;
      margin: 0 4px !important;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }

    .swiper {
      padding: 0.5rem 0.375rem;
    }

    .swiper-slide {
      padding: 0 0.375rem;
    }

    .experience-item {
      padding: 1.25rem;
      border-left-width: 3px;
    }
    
    .header-top {
      gap: 0.5rem;
      flex-direction: column;
      align-items: flex-start;
    }
    
    .company-logo {
      width: 36px;
      height: 36px;
      padding: 4px;
      align-self: flex-start;
    }
    
    .job-title {
      font-size: 1.125rem;
      margin-bottom: 0.25rem;
    }

    .company {
      font-size: 0.9rem;
    }

    .duration {
      font-size: 0.8rem;
      margin-top: 0.5rem;
    }

    .achievements {
      margin-top: 1rem;
    }

    .achievements li {
      font-size: 0.9rem;
      line-height: 1.5;
      margin: 0.375rem 0;
      padding-left: 1rem;
    }
    
    :global(.swiper-pagination) {
      margin-top: 1rem !important;
    }

    :global(.swiper-pagination-bullet) {
      width: 8px !important;
      height: 8px !important;
      margin: 0 3px !important;
    }
  }

  @media (max-width: 360px) {
    h2 {
      font-size: 1.5rem;
      margin-bottom: 1.25rem;
    }

    .swiper {
      padding: 0.375rem 0.25rem;
    }

    .swiper-slide {
      padding: 0 0.25rem;
    }

    .experience-item {
      padding: 1rem;
    }
    
    .header-top {
      gap: 0.375rem;
    }
    
    .company-logo {
      width: 32px;
      height: 32px;
      padding: 3px;
    }
    
    .job-title {
      font-size: 1rem;
      line-height: 1.2;
    }

    .company {
      font-size: 0.85rem;
    }

    .duration {
      font-size: 0.75rem;
    }

    .achievements li {
      font-size: 0.85rem;
      line-height: 1.4;
      margin: 0.25rem 0;
      padding-left: 0.875rem;
    }

    .achievements li:before {
      font-size: 0.8rem;
    }
    
    :global(.swiper-pagination-bullet) {
      width: 6px !important;
      height: 6px !important;
      margin: 0 2px !important;
    }
  }
</style>

